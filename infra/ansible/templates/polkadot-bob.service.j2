[Unit]
Description=Polkadot Node

[Service]
ExecStart=/opt/artemis/bin/polkadot \
         --name {{ nodes.bob.name }} \
         --chain /opt/artemis/rococo.json \
         --base-path /opt/artemis/data \
         --rpc-cors=all \
         --bob \
         --bootnodes {{ nodes.bob.bootnodes[0] }}

Restart=always

[Install]
WantedBy=multi-user.target
